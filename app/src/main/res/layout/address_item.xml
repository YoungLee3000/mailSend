<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycle_style"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    >


    <TextView
        android:id="@+id/text_label"
        android:layout_weight="1"
        android:layout_width="40dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@drawable/circle_shape"
        android:layout_gravity="center"
        android:text="李"
        android:textSize="25dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"/>


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_address_head"
            android:text="李雍 18883878169"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/text_address_contain"
            android:text="福建省 福州市 闽侯县 白沙镇 溪头村仙山边217号信付小姐
            sadfds fsafdasdf safsadfasdfsdfdsafsasfsafsadfsadfsadfsafsfsdafasdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>



    <TextView
        android:id="@+id/text_confirm"
        android:background="@drawable/bg_text_left_border"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="确认"/>

</LinearLayout>