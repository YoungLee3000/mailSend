<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/recycle_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">


    <RelativeLayout
        android:id="@+id/rl_col1"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_good_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="危险"/>

        <TextView
            android:id="@+id/tv_good_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_good_type"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="3kg"/>

    </RelativeLayout>





    <RelativeLayout
        android:id="@+id/rl_col2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_marginLeft="5dp"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:background="@drawable/bg_text_left_border"
        >

        <TextView
            android:id="@+id/tv_receive_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="收件人信息: "/>

        <TextView
            android:id="@+id/tv_receive_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_receive_tips"
            android:textStyle="bold"
            android:text="张华民 15687372195"/>

        <TextView
            android:id="@+id/tv_receive_contain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_receive_head"
            android:text="福建省厦门市思明区滨海街道厦门大学南光食堂"
            android:textStyle="normal"/>

        <View
            android:id="@+id/v_divide_line1"
            android:background="@color/gray"
            android:layout_width="wrap_content"
            android:layout_below="@id/tv_receive_contain"
            android:layout_marginTop="5dp"
            android:layout_height="1sp"/>

        <TextView
            android:id="@+id/tv_send_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_divide_line1"
            android:layout_marginTop="5dp"
            android:text="寄件人信息: "/>

        <TextView
            android:id="@+id/tv_send_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_send_tips"
            android:textStyle="bold"
            android:text="李明 18887372195"/>

        <TextView
            android:id="@+id/tv_send_contain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_send_head"
            android:text="四川省成都市湛江区磁器口鹭江宾馆"
            android:textStyle="normal"/>


    </RelativeLayout>



    <TextView
        android:background="@drawable/bg_text_left_border"
        android:id="@+id/text_confirm"
        android:layout_weight="2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="确认"/>







</LinearLayout>