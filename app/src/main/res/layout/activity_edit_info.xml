<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditInfoActivity">


    <TextView
        android:id="@+id/tv_tips1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="收件人信息编辑"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/ll_row1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_tips1">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="收件人："
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_re_name"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:background="@drawable/bg_edit_text"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="dd"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_row2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_row1">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="收件人电话："
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_re_phone"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:background="@drawable/bg_edit_text"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="dd"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_row3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_row2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="收件人地址："
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_re_address"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:background="@drawable/bg_edit_text"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="dd"
            />

    </LinearLayout>



    <TextView
        android:id="@+id/tv_tips2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="寄件人信息编辑"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ll_row3"/>

    <LinearLayout
        android:id="@+id/ll_row4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_tips2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="寄件人："
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_se_name"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:background="@drawable/bg_edit_text"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="dd"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_row5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_row4">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="寄件人电话："
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_se_phone"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:background="@drawable/bg_edit_text"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="dd"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_row6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_row5">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="寄件人地址："
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_se_address"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:background="@drawable/bg_edit_text"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="dd"
            />

    </LinearLayout>



    <TextView
        android:id="@+id/tv_tips3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="其它信息编辑"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ll_row6"/>



    <LinearLayout
        android:id="@+id/ll_row7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_tips3">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="物品类型："
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_good_weight"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:background="@drawable/bg_edit_text"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="dd"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_row8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_row7">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="物品重量："
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_good_type"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:background="@drawable/bg_edit_text"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="dd"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_row9"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_row8">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="寄件单号："
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_good_code"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:background="@drawable/bg_edit_text"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="dd"
            />

    </LinearLayout>



    <Button
        android:id="@+id/btn_info_confirm"
        android:background="@drawable/set_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/ll_row9"
        android:text="确认"
        android:textSize="22sp"/>





</RelativeLayout>